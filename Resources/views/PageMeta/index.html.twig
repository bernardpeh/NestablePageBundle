{% extends 'base.html.twig' %}

{% trans_default_domain "BpehNestablePageBundle" %}

{% block body %}
    <h1>PageMeta list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Page_title</th>
                <th>Menu_title</th>
                <th>Locale</th>
                <th>Short_description</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pageMeta in pageMetas %}
            <tr>
                <td><a href="{{ path('bpeh_pagemeta_show', { 'id': pageMeta.id }) }}">{{ pageMeta.id }}</a></td>
                <td>{{ pageMeta.pagetitle }}</td>
                <td>{{ pageMeta.menutitle }}</td>
                <td>{{ pageMeta.locale }}</td>
                <td>{{ pageMeta.shortdescription }}</td>
                <td>{{ pageMeta.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bpeh_pagemeta_show', { 'id': pageMeta.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bpeh_pagemeta_edit', { 'id': pageMeta.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bpeh_pagemeta_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
